<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3><%= list.title %></h3>
        </div>

        <div class="card listing-card col-6 offset-3" >
            <img src="<%= list.image.url %>" class="card-img-top show-img" alt="<%= list.title %>" >
            <div class="card-body">
                <p class="card-text">
                    <br>
                    <%= list.description %>
                    <br>
                    &#8377; <%= list.price.toLocaleString("en-IN") %>
                    <br>
                    <%= list.location %>
                    <br>
                    <%= list.country %>
                </p> 
            </div>
        </div>

        <div class=" shbtn ">
            <div></div>
            <div></div>
            <a href="/listing/<%=list._id%>/edit" class="btn btn-dark  offset-3 ">Edit</a>

            <form action="/listing/<%=list._id%>?_method=delete" method="post">
                <button class="btn btn-dark offset-5 add-btn ">Delete</button>
            </form>
        </div>


        <div class="col-8 offset-3 mt-3">
            <hr>
            <h4>Leave a review</h4>
            <form action="/listing/<%=list._id%>/reviews" method="post" novalidate class="needs-validation">
                <div>
                    <label for="rating" class="form-label ">Rating</label>
                    <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5">
                </div>
                
                <div>
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" class="form-control" name="review[Comment]" rows="4" cols="50" required></textarea>
                    <div class="invalid-feedback">
                        please enter a comment before submitting
                    </div>
                </div>
                <button class="btn btn-outline-dark m-3">Submit</button>
            </form>
            <hr>
            <h4>All reviews</h4>

            <p><b>All reviews</b></p>

            <div class="row">
                <% for (review of list.reviews){%>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">name</h5>
                            <p class="card-text"><%=review.Comment%></p>
                            <p class="card-text"><%=review.rating%> star</p>
                            <form class="mb-3" action="/listing/<%=list._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                    </div>
                <%}%>
            </div>
        </div>
    </div>
</body>
